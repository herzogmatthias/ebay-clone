{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./custom_types/*"]
  },
  "include": [
    "./*.js",
    "./src/**/*.ts",
    "test/**/*.ts",
    "custom_types/**/*.d.ts"
  ]
}
